@import "variable.styl"

*
  box-sizing: border-box
  list-style: none
  font-family: "Microsoft YaHei Regular","Microsoft YaHei"
  margin: 0
  padding: 0
  word-break: break-all
  
canvas
  display:block

span
  color: inherit

body
  line-height: 1
  color: $size-color
a
  color: $link-color
  text-decoration: none
  transition: .4s color linear
  border:none
  &:link,&:active{
    outline:none
  }
  &:hover
    color: $hover-color

table {
  width:100%
  border-collapse: collapse
  table-layout: fixed
}
img{
  border:none
}
html, body {
  height: 100%
}
body{
  min-width:1080px
  background-color:#fff
}
#app{
  position:relative
  min-height:100%
  height:auto
  padding-bottom:368px
}

.f-l
  float: left

.f-r
  float: right

.clear-f:after
  content: "\0020";
  display: block;
  height: 0;
  clear: both;

.clear-f
  zoom: 1;

.container
  // width: calc(100% / 1.6)
  width: 1080px
  margin: 0 auto

.hover-hand
  cursor: pointer
