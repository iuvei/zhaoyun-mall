@import 'variable.styl'

// 针对主题页面和分类页面
// 首页
.goods {
  background-color: #f7f7f7
  padding-bottom: 80px

  &-wrap {
    padding: 10px 40px 20px 40px
    background-color: #fff
  }
  &-list {
    display: flex
    flex-wrap: wrap
    margin-left: -20px
    .item,.item2 {
      position: relative
      width: 235px
      height: 358px
      margin: 0 0 20px 20px
      background-color: #f3f3f3
      
      overflow: hidden
      &:before{
        content:''
        z-index:10
        position:absolute
        box-sizing:border-box
        left:0
        top:0
        width:100%
        height:100%
        border:1px solid #f3f3f3
      }
      a{
        display: inline-block
      }
    }
    .item {
      &:hover {
        hover-goods()
        .info {
          opacity: 0
        }
        .info_hover {
          opacity: 1
        }
      }
    }
    .item2 {
      &:hover {
        hover-goods()
        .delete{
          display:block
        }
      }
    }
    .item-column {
      width: 400px
      height: 180px
      a {
        display: flex
      }
      .img {
        width: 180px
        height: 180px
      }
      .info {
        flex: 1
        padding: 24px 10px
      }
      .info_hover {
        left: 180px
        top: 0
      }
      .price {
        margin-top: 30px
      }
    }
    .item-dingjin{
      .price {
        color: $size-color2
      }
    }
    .earnest {
      position: absolute
      display: flex
      justify-content: center
      left: 50%
      bottom: 10px
      transform: translateX(-50%)
      .icon {
        width: 52px
        height: 20px
        margin-right: 10px
        background: url("~images/dingjin2.png") center no-repeat
      }
      em {
        font-style: normal
        font-size: $font-s
        color: $num-color
        line-height: 20px
      }
    }
    .img {
      width: 235px
      height: 235px
      overflow: hidden
      background-color: #fff
      position:relative
      img {
        display: block
        width: 100%
        height: 100%
        padding:15%
      }
    }
    .info {
      padding: 10px 20px
      transition: all .2s linear
    }
    .info_hover {
      position: absolute
      top: 235px
      left: 0
      right: 0
      bottom: 0
      // padding-top:20px
      opacity: 0
      transition: all .2s linear
      display: flex
      flex-wrap: wrap
      justify-content: center
      align-content: center
      align-items: center
    }
    .title {
      font-size: $font-s
      color: $size-color2
      line-height: 20px
      height: 40px
      ellipsis-mulit(2)
    }
    .price {
      font-size: $font-s
      color: $num-color
      line-height: 20px
      padding: 10px 0
    }
    .other_price {
      font-size: $font-x
      color: $size-color2
      line-height: 16px
      del {
        color: $size-color3
      }
    }
    .dingjin {
      color: $main-color
      text-align: center
      padding-bottom: 20px
      line-height: 20px
    }
    .btn {
      width: 180px
      border-radius: 2px
    }
    .item2 .delete{
      display:none
      z-index:12
      position:absolute
      width:30px
      height:30px
      top:0
      right:0
      background-color:#afafaf
      color:#fff
      font-size:20px
      text-align:center
      line-height:30px
    }
  }
}
