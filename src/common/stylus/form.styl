@import 'variable.styl'

.inpbox{
	position:relative
	padding:30px 0 60px
	.error{
		position:absolute
		top:0
		left:285px
		color: #f56c6c
		font-size: 12px;
		line-height: 30px
	}
	.el-input__inner{
		border-radius:2px
	}
	.el-form-item{
		width:450px
		margin:0 auto 20px
		&__label{
			color:$size-color2
		}
	}
	.codebox{
		.el-form-item__content{
			display:flex
		}
		.el-input{
			width:auto
			flex:1
		}
		.el-button{
			margin-left:5px
			border-radius:2px
			border-color:$main-color
			color:$main-color
			padding:12px 0
			width:88px
		}
	}
	.btnbox{
		margin-top:20px
		margin-left:20px
		border-radius:2px
		width:150px
	}
}